<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.SettingsActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_background"
            android:id="@+id/background"
            tools:layout_editor_absoluteY="36dp"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints"/>

    <ImageView
            android:layout_margin="16dp"
            android:id="@+id/back"
            android:src="@drawable/arrow_left_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <TextView
            android:text="SETTINGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            app:fontFamily="@font/iceberg_regular"
            android:textSize="32sp"
            android:id="@+id/settings"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"/>
    <TextView
            android:text="SOUNDS ON/OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound_status"
            android:fontFamily="@font/iceberg_regular"
            android:textSize="30sp"
            android:textColor="@color/defaultBackgroundColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="EFFECTS VOLUME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/effects_volume"
            android:fontFamily="@font/iceberg_regular"
            android:textSize="30sp"
            android:textColor="@color/defaultBackgroundColor"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/sound_status"
            app:layout_constraintTop_toBottomOf="@+id/sound_status"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/sound_checkbox"
            android:background="@color/defaultBackgroundColor"
            app:layout_constraintBottom_toBottomOf="@+id/sound_status"
            app:layout_constraintTop_toTopOf="@+id/sound_status"
            app:layout_constraintStart_toEndOf="@+id/sound_status"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:buttonTint="@color/colorPrimary"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/effects_seekbar"
            android:background="@color/defaultBackgroundColor"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/effects_volume"
            app:layout_constraintStart_toStartOf="@+id/effects_volume"
            app:layout_constraintTop_toBottomOf="@+id/effects_volume"
            android:thumbTint="@color/colorPrimary"
            android:progressTint="@color/defaultTextColor"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/music_seekbar"
            android:background="@color/defaultBackgroundColor"
            android:thumbTint="@color/colorPrimary"
            android:progressTint="@color/defaultTextColor"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/music_volume"
            app:layout_constraintStart_toStartOf="@+id/music_volume"
            app:layout_constraintEnd_toEndOf="@+id/music_volume"
    />
    <TextView
            android:text="MUSIC VOLUME"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/music_volume"
            android:fontFamily="@font/iceberg_regular"
            android:textSize="30sp"
            android:textColor="@color/defaultBackgroundColor"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/effects_seekbar"
            app:layout_constraintEnd_toEndOf="@+id/effects_seekbar"
            app:layout_constraintStart_toStartOf="@+id/effects_seekbar"
            android:gravity="center"/>

</android.support.constraint.ConstraintLayout>