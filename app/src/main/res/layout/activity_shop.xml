<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".views.activities.ShopActivity">

    <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:layout_margin="16dp"
            android:id="@+id/back"
            android:src="@drawable/arrow_left_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/icon_money"
            android:id="@+id/icon_coin"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintBottom_toBottomOf="@+id/back"
            app:layout_constraintTop_toTopOf="@+id/back"
            app:layout_constraintEnd_toStartOf="@+id/money"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"/>
    <TextView
            android:textStyle="bold"
            android:id="@+id/money"
            android:text="25"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textSize="25sp"
            tools:textColor="@android:color/white"
            android:visibility="visible"
            app:fontFamily="@font/iceberg_regular"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/icon_coin"
            app:layout_constraintTop_toTopOf="@+id/icon_coin"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"/>

    <TextView
            android:text="SHOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            app:fontFamily="@font/iceberg_regular"
            android:textSize="32sp"
            android:id="@+id/shop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"/>

    <android.support.v4.view.ViewPager
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/pager"
            android:scrollbars="none"
            android:overScrollMode="never"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop"
            android:layout_marginTop="16dp"/>

</android.support.constraint.ConstraintLayout>