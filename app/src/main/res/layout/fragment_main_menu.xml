<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/menu_background"
        android:id="@+id/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/menu_logo"
        android:cropToPadding="true"
        android:id="@+id/game_logo"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/play"/>

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:drawableLeft="@drawable/icon_money"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="25"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:fontFamily="@font/iceberg_regular"
        app:layout_constraintBottom_toBottomOf="@+id/shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shop"
        tools:textColor="@android:color/white" />

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:id="@+id/shop"
        android:layout_weight="1"
        android:background="@drawable/custom_button_background"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toStartOf="@+id/high_score"
        app:layout_constraintBottom_toBottomOf="@+id/high_score"
        app:layout_constraintTop_toTopOf="@+id/high_score"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/shop_image"
        app:srcCompat="@drawable/icon_shop"
        app:layout_constraintTop_toTopOf="@+id/shop"
        app:layout_constraintStart_toStartOf="@+id/shop"
        app:layout_constraintBottom_toBottomOf="@+id/shop"
        app:layout_constraintEnd_toEndOf="@+id/shop"/>

    <ImageButton
        android:id="@+id/high_score"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button_background"
        app:layout_constraintBottom_toBottomOf="@+id/settings"
        app:layout_constraintEnd_toStartOf="@+id/settings"
        app:layout_constraintTop_toTopOf="@+id/settings_image"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/high_score_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/high_score"
        app:layout_constraintEnd_toEndOf="@+id/high_score"
        app:layout_constraintStart_toStartOf="@+id/high_score"
        app:layout_constraintTop_toTopOf="@+id/high_score"
        app:srcCompat="@drawable/icon_highscore" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/settings_image"
        app:srcCompat="@drawable/icon_settings"
        app:layout_constraintStart_toStartOf="@+id/settings"
        app:layout_constraintEnd_toEndOf="@+id/settings"
        app:layout_constraintTop_toTopOf="@+id/settings"
        app:layout_constraintBottom_toBottomOf="@+id/settings"/>

    <Button
        android:id="@+id/exit"
        app:fontFamily="@font/iceberg_regular"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_background"
        android:text="@string/button_exit"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/play"
        app:layout_constraintEnd_toEndOf="@+id/play"
        app:layout_constraintTop_toBottomOf="@+id/play"/>
    <Button
        android:id="@+id/play"
        app:fontFamily="@font/iceberg_regular"
        android:layout_width="250dp"
        android:text="@string/button_play"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_height="75dp"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/background"/>

</android.support.constraint.ConstraintLayout>