<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".views.activities.HighScoreActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_background"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/background"/>

    <ImageView
            android:layout_margin="16dp"
            android:id="@+id/back"
            android:src="@drawable/arrow_left_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true">
        <TextView
                android:text="@string/high_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                app:fontFamily="@font/iceberg_regular"
                android:textSize="32sp"
                android:id="@+id/high_score"/>
        <TextView
                android:id="@+id/null_high_score"
                android:layout_marginTop="16dp"
                android:text="@string/new_high_score"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iceberg_regular"/>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/high_score_container"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_horizontal">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="w,1:1"
                    app:layout_constraintEnd_toEndOf="parent">
                <TextView
                        android:textStyle="bold"
                        android:text="@string/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/score_text"
                        android:fontFamily="@font/iceberg_regular"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        android:textStyle="bold"
                        android:id="@+id/score_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iceberg_regular"
                        android:textSize="18sp"
                        android:text="100"
                        app:layout_constraintBottom_toBottomOf="@+id/meteor_image"
                        app:layout_constraintTop_toTopOf="@+id/meteor_image"
                        app:layout_constraintStart_toEndOf="@+id/meteor_image"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/linearLayout3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintDimensionRatio="w,1:1"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                        android:src="@drawable/meteor_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:id="@+id/meteor_image"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                        app:layout_constraintHorizontal_bias="0.3"/>
                <TextView
                        android:textStyle="bold"
                        android:id="@+id/meteor_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iceberg_regular"
                        android:text="x100"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/meteor_image"
                        app:layout_constraintTop_toTopOf="@+id/meteor_image"
                        app:layout_constraintStart_toEndOf="@+id/meteor_image"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/linearLayout"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout3">
                <ImageView
                        android:src="@drawable/enemy_black_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:id="@+id/enemy_ship_image"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                        app:layout_constraintHorizontal_bias="0.3"
                        tools:layout_editor_absoluteY="155dp"
                        tools:layout_editor_absoluteX="7dp"/>
                <TextView
                        android:textStyle="bold"
                        android:id="@+id/enemy_ship_count"
                        android:text="x100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/enemy_image"
                        app:layout_constraintBottom_toBottomOf="@+id/enemy_image"
                        app:layout_constraintTop_toTopOf="@+id/enemy_image"
                        android:fontFamily="@font/iceberg_regular"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout5"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:id="@+id/exploder_image"
                        android:src="@drawable/meteor_grey_big_3"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                        app:layout_constraintHorizontal_bias="0.3"/>
                <TextView
                        android:textStyle="bold"
                        android:id="@+id/exploder_count"
                        android:text="x100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iceberg_regular"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout5"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5">
                <ImageView
                        android:src="@drawable/meteor_brown_big_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:id="@+id/border_image"
                        app:layout_constraintEnd_toEndOf="@+id/exploder_image"
                        app:layout_constraintStart_toStartOf="@+id/exploder_image"
                        app:layout_constraintTop_toBottomOf="@+id/exploder_image"/>
                <TextView
                        android:textStyle="bold"
                        android:id="@+id/border_count"
                        android:text="x100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/border_image"
                        app:layout_constraintStart_toEndOf="@+id/border_image"
                        app:layout_constraintTop_toTopOf="@+id/border_image"
                        android:fontFamily="@font/iceberg_regular"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>