<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_high_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:background="@drawable/menu_background">

    <ImageView
        android:id="@+id/iv_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="@dimen/spacing_medium_16"
        android:contentDescription="@string/back_btn_content_description"
        android:src="@drawable/arrow_left_circle" />

    <TextView
        android:id="@+id/tv_high_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_high_score_title_margin_12"
        android:text="@string/fragment_high_score_title"
        android:textColor="@color/colorMenuText"
        android:textSize="@dimen/font_fragment_title_32"
        app:fontFamily="@font/iceberg_regular" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium_16"
        android:background="@color/defaultBackgroundColor"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fragment_high_score_container_padding_48"
        android:paddingTop="@dimen/spacing_medium_16"
        android:paddingRight="@dimen/fragment_high_score_container_padding_48"
        android:paddingBottom="@dimen/spacing_medium_16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iceberg_regular"
                android:text="@string/fragment_high_score_score"
                android:textSize="@dimen/font_default_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_tiny_4"
                android:layout_marginLeft="@dimen/spacing_tiny_4"
                android:layout_weight="1"
                android:fontFamily="@font/iceberg_regular"
                android:textSize="@dimen/font_default_18"
                android:textStyle="bold"
                tools:text="100" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_meteor_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_high_score_object_size_50"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:drawableStart="@drawable/ic_custom_meteor"
            android:drawableLeft="@drawable/ic_custom_meteor"
            android:drawablePadding="@dimen/spacing_small_8"
            android:fontFamily="@font/iceberg_regular"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_default_18"
            android:textStyle="bold"
            tools:text="x100" />

        <TextView
            android:id="@+id/tv_enemy_ship_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_high_score_object_size_50"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:drawableStart="@drawable/ic_custom_enemy_ship"
            android:drawableLeft="@drawable/ic_custom_enemy_ship"
            android:drawablePadding="@dimen/spacing_small_8"
            android:fontFamily="@font/iceberg_regular"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_default_18"
            android:textStyle="bold"
            tools:text="x100" />

        <TextView
            android:id="@+id/tv_exploder_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_high_score_object_size_50"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:drawableStart="@drawable/ic_custom_exploder"
            android:drawableLeft="@drawable/ic_custom_exploder"
            android:drawablePadding="@dimen/spacing_small_8"
            android:fontFamily="@font/iceberg_regular"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_default_18"
            android:textStyle="bold"
            tools:text="x100" />

        <TextView
            android:id="@+id/tv_border_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_high_score_object_size_50"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:drawableStart="@drawable/ic_custom_border"
            android:drawableLeft="@drawable/ic_custom_border"
            android:drawablePadding="@dimen/spacing_small_8"
            android:fontFamily="@font/iceberg_regular"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_default_18"
            android:textStyle="bold"
            tools:text="x100" />
    </LinearLayout>
</LinearLayout>